<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ALaMarona.Domain" namespace="ALaMarona.Domain.Entities">
  <class name="Persona">
    <id name="Id">
      <generator class="identity"></generator>
    </id>
    <component name="Nombre" class="ALaMarona.Domain.Entities.Nombre, ALaMarona.Domain">
      <property name="Primero" column="PrimerNombre"/>
      <property name="Segundo" column="SegundoNombre"/>
      <property name="Apellido" column="Apellido" not-null="true"/>
      <property name="Alias" column="Alias"/>
    </component>
    
    <many-to-one name="Domicilio" class="ALaMarona.Domain.Entities.Direccion, ALaMarona.Domain" not-null="true" cascade="save-update">
      <column name="IdDomicilio"/>
    </many-to-one>

    <property name="Telefono" not-null="false" />
    
    <component name="Documento" class="ALaMarona.Domain.Entities.Documento, ALaMarona.Domain" >
      <property name="Tipo" column="TipoDocumento" not-null="true"/>
      <property name="Numero" column="NumeroDocumento" not-null="true"/>
      </component>
    
    <property name="FechaNacimiento" not-null="true" />

    <many-to-one name="LugarNacimiento" class="ALaMarona.Domain.Entities.Direccion, ALaMarona.Domain" cascade="save-update">
      <column name="IdLugarNacimiento"/>
    </many-to-one>

    <component name="EstadoCivil" class="ALaMarona.Domain.Entities.EstadoCivil, ALaMarona.Domain" >
      <property name="Descripcion" column="EstadoCivil"/>
    </component>
  </class>
</hibernate-mapping>
